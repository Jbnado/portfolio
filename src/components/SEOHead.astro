---
import { t } from '../i18n/utils';
import { SITE_URL } from '../utils/constants';

interface Props {
  locale?: string;
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  locale = 'pt-br',
  title = t('seo.title', locale),
  description = t('seo.description', locale),
  ogImage = '/og-image.png',
} = Astro.props;

const ogLocaleMap: Record<string, string> = {
  'pt-br': 'pt_BR',
  en: 'en_US',
  es: 'es_ES',
};

const hreflangMap: Record<string, string> = {
  'pt-br': `${SITE_URL}/`,
  en: `${SITE_URL}/en/`,
  es: `${SITE_URL}/es/`,
};

const canonicalUrl = hreflangMap[locale] ?? `${SITE_URL}/`;
const ogImageUrl = `${SITE_URL}${ogImage}`;
const ogLocale = ogLocaleMap[locale] ?? 'pt_BR';
const ogLocaleAlternates = Object.values(ogLocaleMap).filter((l) => l !== ogLocale);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'João Bernardo',
  jobTitle: 'Fullstack Developer',
  url: SITE_URL,
  sameAs: [
    'https://linkedin.com/in/jbnado',
    'https://github.com/Jbnado',
  ],
};
---

<!-- SEO: Primary meta -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<!-- SEO: Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:locale" content={ogLocale} />
{ogLocaleAlternates.map((alt) => (
  <meta property="og:locale:alternate" content={alt} />
))}
<meta property="og:site_name" content="João Bernardo" />

<!-- SEO: Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

<!-- SEO: hreflang -->
<link rel="alternate" hreflang="pt-BR" href={hreflangMap['pt-br']} />
<link rel="alternate" hreflang="en" href={hreflangMap['en']} />
<link rel="alternate" hreflang="es" href={hreflangMap['es']} />
<link rel="alternate" hreflang="x-default" href={hreflangMap['pt-br']} />

<!-- SEO: JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
