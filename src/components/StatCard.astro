---
interface Props {
  value: number;
  suffix?: string;
  label: string;
}

const { value, suffix = '', label } = Astro.props;
---

<div class="stat-card" aria-label={`${value}${suffix} ${label}`}>
  <div class="stat-card-value">
    <slot>{value}{suffix}</slot>
  </div>
  <div class="stat-card-label">{label}</div>
</div>

<style is:global>
  .stat-card {
    text-align: center;
  }

  @media (min-width: 768px) {
    .stat-card {
      text-align: left;
    }
  }

  .stat-card-value {
    font-family: var(--font-mono);
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
  }

  .stat-card-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--color-text-secondary);
    margin-top: 0.25rem;
  }

  /* Dark mode */
  .dark .stat-card-value {
    text-shadow:
      0 0 20px rgba(162, 119, 255, 0.5),
      0 0 50px rgba(162, 119, 255, 0.2);
  }
</style>
