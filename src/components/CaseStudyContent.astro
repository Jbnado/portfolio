---
import { t } from '../i18n/utils';

interface Props {
  problem: string;
  decision: string;
  result: string;
  locale?: string;
}

const { problem, decision, result, locale = 'pt-br' } = Astro.props;
---

<div class="case-study-content">
  <div class="case-study-section">
    <h4 class="case-study-label" aria-label={t('caseStudy.problem', locale)}>{t('caseStudy.problem', locale)}</h4>
    <p class="case-study-text">{problem}</p>
  </div>
  <div class="case-study-section">
    <h4 class="case-study-label" aria-label={t('caseStudy.decision', locale)}>{t('caseStudy.decision', locale)}</h4>
    <p class="case-study-text">{decision}</p>
  </div>
  <div class="case-study-section">
    <h4 class="case-study-label" aria-label={t('caseStudy.result', locale)}>{t('caseStudy.result', locale)}</h4>
    <p class="case-study-text">{result}</p>
  </div>
</div>

<style is:global>
  /* No-JS: native details/summary behavior (default) */
  .case-study-trigger {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 0 0;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    cursor: pointer;
    list-style: none;
  }

  .case-study-trigger::-webkit-details-marker {
    display: none;
  }

  .case-study-trigger::marker {
    display: none;
    content: "";
  }

  .case-study-chevron {
    display: inline-block;
    font-size: 1rem;
    transition: transform 300ms cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  /* Enhanced: animated expansion via JS island */
  .case-study-details.enhanced .case-study-body {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 300ms cubic-bezier(0.16, 1, 0.3, 1);
  }

  .case-study-details.enhanced.open .case-study-body {
    grid-template-rows: 1fr;
  }

  .case-study-details.enhanced .case-study-body > * {
    overflow: hidden;
  }

  .case-study-details.enhanced .case-study-content {
    opacity: 0;
    transition: opacity 200ms ease;
  }

  .case-study-details.enhanced.open .case-study-content {
    opacity: 1;
    transition: opacity 200ms ease 100ms;
  }

  .case-study-details.enhanced.open .case-study-chevron {
    transform: rotate(90deg);
  }

  /* Case study content layout */
  .case-study-content {
    padding: 1.5rem 0 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .case-study-section {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .case-study-label {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .case-study-text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  @media (min-width: 768px) {
    .case-study-text {
      font-size: 1rem;
    }
  }

  /* Dark mode */
  .dark .case-study-trigger {
    text-shadow: 0 0 8px rgba(162, 119, 255, 0.3);
  }
</style>
